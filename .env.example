# Ukrainian Name Detection API Configuration

# API Settings
NAME_DETECTOR_HOST=0.0.0.0
NAME_DETECTOR_PORT=8000
NAME_DETECTOR_DEBUG=false

# NER Engine (Tier 2)
# Options: uk_core_news_md (faster) or uk_core_news_trf (more accurate)
NAME_DETECTOR_SPACY_MODEL=uk_core_news_md
NAME_DETECTOR_NER_CONFIDENCE_THRESHOLD=0.7

# LLM Fallback (Tier 3) - MamayLM
NAME_DETECTOR_LLM_ENABLED=true
NAME_DETECTOR_LLM_MODEL_NAME=mamaylm-gemma2-9b-instruct-q4_k_m.gguf
NAME_DETECTOR_LLM_CONTEXT_LENGTH=2048
NAME_DETECTOR_LLM_THREADS=4
NAME_DETECTOR_LLM_MAX_TOKENS=150
NAME_DETECTOR_LLM_TEMPERATURE=0.1
NAME_DETECTOR_LLM_TIMEOUT=30
NAME_DETECTOR_LLM_MAX_CONCURRENT=5

# Cache
NAME_DETECTOR_CACHE_ENABLED=true
NAME_DETECTOR_CACHE_MAXSIZE=10000
